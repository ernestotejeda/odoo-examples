<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="contactus_form" name="Contact Form referral source" inherit_id="website_crm.contactus_form">
        <xpath expr="//input[@name='phone']/../.." position="attributes">
            <attribute name="class" add="d-none" separator=" "/>
        </xpath>
        <xpath expr="//input[@name='partner_name']" position="attributes">
            <attribute name="required"></attribute>
        </xpath>
        <xpath expr="//input[@name='partner_name']/../.." position="attributes">
            <attribute name="class" remove="o_website_form_required_custom" separator=" "/>
        </xpath>
        <xpath expr="//textarea[@name='description']/../.." position="before">
            <div class="form-group row form-field o_website_form_required_custom">
                <label class="col-lg-3 col-md-4 col-form-label" for="referral_source">Referral source</label>
                <div class="col-lg-7 col-md-8">
                    <select class="form-control o_website_form_input" name="referral_source" required="">
                        <option value="" />
                        <option value="third_party">Terceros</option>
                        <option value="social_network">Redes sociales</option>
                        <option value="internet_searching">BÃºsqueda en Internet</option>
                    </select>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
