<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_medical_consultation_product_pivot" model="ir.ui.view">
         <field name="name">medical.consultation.report.pivot</field>
         <field name="model">medical.consultation.report</field>
         <field name="arch" type="xml">
             <pivot string="Medical Consultations Analysis" sample="1">
                 <field name="company_id" type="col" />
                 <field name="date" interval="month" type="row" />
                 <field name="product_qty" type="measure" />
             </pivot>
         </field>
    </record>

    <record id="view_medical_consultation_product_graph" model="ir.ui.view">
         <field name="name">medical.consultation.report.graph</field>
         <field name="model">medical.consultation.report</field>
         <field name="arch" type="xml">
             <graph string="consultations Analysis" type="line" sample="1">
                 <field name="date" interval="day" />
                 <field name="product_qty" type="measure" />
             </graph>
         </field>
    </record>

    <record id="medical_consultation_report_view_tree" model="ir.ui.view">
        <field name="name">medical.consultation.report.view.tree</field>
        <field name="model">medical.consultation.report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date" widget="date" />
                <field name="consultation_id" optional="show" />
                <field name="partner_id" optional="hide" />
                <field
                    name="company_id"
                    optional="show"
                    groups="base.group_multi_company"
                />
                <field name="product_qty" optional="hide" sum="Sum of medicines" />
            </tree>
        </field>
    </record>

    <record id="view_medical_consultation_product_search" model="ir.ui.view">
        <field name="name">medical.consultation.report.search</field>
        <field name="model">medical.consultation.report</field>
        <field name="arch" type="xml">
            <search string="Medical Consultations Analysis">
                <field name="date" />
                <separator />
                <field name="product_id" />
                <field name="partner_id" />
                <group expand="0" string="Extended Filters">
                    <field name="company_id" groups="base.group_multi_company" />
                </group>
                <group expand="1" string="Group By">
                    <filter
                        string="Customer"
                        name="Customer"
                        context="{'group_by':'partner_id'}"
                    />
                    <filter
                        string="Customer Country"
                        name="country_id"
                        context="{'group_by':'country_id'}"
                    />
                    <filter
                        string="Product"
                        name="Product"
                        context="{'group_by':'product_id'}"
                    />
                    <filter
                        string="Company"
                        name="company"
                        groups="base.group_multi_company"
                        context="{'group_by':'company_id'}"
                    />
                    <separator />
                    <filter
                        string="Consultation Date"
                        name="date"
                        context="{'group_by':'date'}"
                    />
                </group>
            </search>
        </field>
    </record>

    <record
        id="action_medical_consultation_report_action"
        model="ir.actions.act_window"
    >
        <field name="name">Medical Consultation Analysis</field>
        <field name="res_model">medical.consultation.report</field>
        <field name="view_mode">graph,pivot</field>
        <field name="view_id" />  <!-- force empty -->
        <field name="search_view_id" ref="view_medical_consultation_product_search" />
        <field
            name="context"
        >{'search_default_consultations':1, 'group_by_no_leaf':1,'group_by':[], 'search_default_filter_order_date': 1}</field>
        <field
            name="help"
        >This report performs analysis on your quotations and sales orders. Analysis check your sales revenues and sort it by different group criteria (salesman, partner, product, etc.) Use this report to perform analysis on sales not having invoiced yet. If you want to analyse your turnover, you should use the Invoice Analysis report in the Accounting application.</field>
    </record>

    <menuitem
        id="consultation_report_menu"
        name="Consultation report"
        action="action_medical_consultation_report_action"
        parent="medical_consultation_report_menu"
        sequence="1"
    />
</odoo>
