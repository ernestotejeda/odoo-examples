<odoo>
    <!-- Product templates -->
    <record id="product_template_only_form_view" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <group name="group_general">
                <field name="is_medicine" />
            </group>
        </field>
    </record>

    <record id="medical_center_product_template_tree_view" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="is_medicine" />
            </field>
        </field>
    </record>

    <record id="medical_center_product_template_only_form_view" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <field name="is_medicine" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>

    <record id="product_template_action" model="ir.actions.act_window">
        <field name="name">Product template</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('is_medicine', '=', True)]</field>
        <field name="context">{'default_is_medicine': True}</field>
    </record>

    <record
        id="medical_center_product_template_action_tree_view"
        model="ir.actions.act_window.view"
    >
        <field name="sequence">2</field>
        <field name="view_mode">tree</field>
        <field name="act_window_id" ref="product_template_action" />
        <field name="view_id" ref="medical_center_product_template_tree_view" />
    </record>

    <record id="product_template_action_form_view" model="ir.actions.act_window.view">
        <field name="sequence">2</field>
        <field name="view_mode">form</field>
        <field name="act_window_id" ref="product_template_action" />
        <field name="view_id" ref="medical_center_product_template_only_form_view" />
    </record>

    <menuitem
        id="medical_center_product_template"
        name="Product template"
        parent="medical_center_config_menu"
        action="product_template_action"
        sequence="20"
    />

    <!-- Product variants -->
    <record id="product_normal_form_view" model="ir.ui.view">
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <group name="group_general">
                <field
                    name="is_medicine"
                    readonly="1"
                    help="Configured at product template level"
                />
            </group>
        </field>
    </record>

    <record id="medical_center_product_product_tree_view" model="ir.ui.view">
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="is_medicine" />
            </field>
        </field>
    </record>

    <record id="medical_center_product_normal_form_view" model="ir.ui.view">
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <field name="is_medicine" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>

    <record id="product_product_action" model="ir.actions.act_window">
        <field name="name">Product variants</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.product</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('is_medicine', '=', True)]</field>
        <field name="context">{'default_is_medicine': True}</field>
    </record>

    <record
        id="medical_center_product_product_action_tree_view"
        model="ir.actions.act_window.view"
    >
        <field name="sequence">2</field>
        <field name="view_mode">tree</field>
        <field name="act_window_id" ref="product_product_action" />
        <field name="view_id" ref="medical_center_product_product_tree_view" />
    </record>

    <record
        id="medical_center_product_product_action_form_view"
        model="ir.actions.act_window.view"
    >
        <field name="sequence">2</field>
        <field name="view_mode">form</field>
        <field name="act_window_id" ref="product_product_action" />
        <field name="view_id" ref="medical_center_product_normal_form_view" />
    </record>

    <menuitem
        id="medical_center_product_product"
        name="Product variants"
        parent="medical_center_config_menu"
        action="product_product_action"
        sequence="20"
    />
</odoo>
